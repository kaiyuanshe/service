{
  "kind": "collectionType",
  "collectionName": "contributions",
  "info": {
    "name": "Contribution"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 100
    },
    "assets": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "task": {
      "via": "contributions",
      "model": "task"
    },
    "evaluations": {
      "collection": "evaluation",
      "via": "contribution"
    }
  }
}
