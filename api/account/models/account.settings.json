{
  "kind": "collectionType",
  "collectionName": "accounts",
  "info": {
    "name": "Account"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "subject": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 5
    },
    "remark": {
      "type": "text",
      "unique": false
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "cash",
        "bank",
        "PayPal",
        "Alipay",
        "WeChat"
      ],
      "required": true
    },
    "partner_ship": {
      "via": "accounts",
      "model": "partner-ship"
    },
    "program": {
      "via": "accounts",
      "model": "program"
    },
    "invoices": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "property": {
      "via": "account",
      "model": "property"
    }
  }
}
