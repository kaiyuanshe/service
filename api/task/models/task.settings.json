{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "name": "Task"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 5
    },
    "description": {
      "type": "richtext",
      "required": true,
      "minLength": 100
    },
    "deadline": {
      "type": "datetime",
      "required": false
    },
    "contributions": {
      "collection": "contribution",
      "via": "task"
    },
    "assets": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
